{
    "name": "donkeyworks/zendframework1-log-writer-mail",
    "description": "Zend Framework 1 Log_Writer_Mail component",
    "type": "library",
    "keywords": [
        "framework",
        "zf1"
    ],
    "homepage": "http://framework.zend.com/",
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.0.0",
        "donkeyworks/zendframework1-layout": "^1.0.0",
        "donkeyworks/zendframework1-mail": "^1.0.0",
        "donkeyworks/zendframework1-log": "^1.0.0"
    },
    "autoload": {
        "classmap": [
            "src/Zend/Log/Writer/Mail.php"
        ]
    },
    "autoload-dev": {
        "psr-0": {
            "Zend_": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "phpstan/phpstan": "^0.9.2",
        "donkeyworks/zendframework1-view-helper-layout": "*",
        "friendsofphp/php-cs-fixer": "^2.11",
        "maglnet/composer-require-checker": "^0.1.6 | ^0.2.1",
        "phpro/grumphp": "^0.14.0"
    },
    "archive": {
        "exclude": ["/tests"]
    },
    "include-path": [
        "./src"
    ],
    "scripts": {
        "test": "phpunit",
        "test-with-coverage": "phpunit --coverage-clover=clover.xml",
        "phpstan": "phpstan analyze -l7 -c phpstan.neon --no-progress ./ --ansi",
        "style-check": "php-cs-fixer fix --dry-run -vv"
    }
}
